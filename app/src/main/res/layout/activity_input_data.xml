<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/walpaper4"
    android:layout_height="match_parent"
    tools:context=".input_data">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_arrow"
                android:layout_centerVertical="true"
                android:src="@drawable/img_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/judul_toolbar"
                android:fontFamily="@font/gotham2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Input Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#4D7A7A7A"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_nis"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/GreenTextInputLayout"
                        android:textColorHint="#ffff"
                        android:textColor="#ffffff"
                        android:textSize="13dp"
                        android:theme="@style/myEditText">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textColorHint="#ffff"
                            android:textColor="#ffffff"
                            android:id="@+id/nis"
                            android:textSize="13dp"
                            android:drawableRight="@drawable/img_user"
                            android:fontFamily="@font/gotham2"
                            android:hint="Nis"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textSize="13dp"
                        android:id="@+id/txt_nama"
                        android:layout_below="@id/txt_nis"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/GreenTextInputLayout"
                        android:textColorHint="#ffff"
                        android:textColor="#ffffff"
                        android:theme="@style/myEditText">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textSize="13dp"
                            android:textColorHint="#ffff"
                            android:textColor="#ffffff"
                            android:id="@+id/nama"
                            android:drawableRight="@drawable/img_user"
                            android:fontFamily="@font/gotham2"
                            android:hint="Nama"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textSize="13dp"
                        android:id="@+id/txt_rombel"
                        android:layout_below="@id/txt_nama"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/GreenTextInputLayout"
                        android:textColorHint="#ffff"
                        android:textColor="#ffffff"
                        android:theme="@style/myEditText">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textSize="13dp"
                            android:textColorHint="#ffff"
                            android:textColor="#ffffff"
                            android:id="@+id/rombel"
                            android:drawableRight="@drawable/img_user"
                            android:fontFamily="@font/gotham2"
                            android:hint="Rombel"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textSize="13dp"
                        android:id="@+id/txt_rayon"
                        android:layout_below="@id/txt_rombel"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/GreenTextInputLayout"
                        android:textColorHint="#ffff"
                        android:textColor="#ffffff"
                        android:theme="@style/myEditText">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textSize="13dp"
                            android:textColorHint="#ffff"
                            android:textColor="#ffffff"
                            android:id="@+id/rayon"
                            android:drawableRight="@drawable/img_user"
                            android:fontFamily="@font/gotham2"
                            android:hint="Rayon"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textSize="13dp"
                        android:id="@+id/txt_nama_barang"
                        android:layout_below="@id/txt_rayon"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/GreenTextInputLayout"
                        android:textColorHint="#ffff"
                        android:textColor="#ffffff"
                        android:theme="@style/myEditText">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textSize="13dp"
                            android:textColorHint="#ffff"
                            android:textColor="#ffffff"
                            android:id="@+id/nama_barang"
                            android:drawableRight="@drawable/img_user"
                            android:fontFamily="@font/gotham2"
                            android:hint="Nama Barang"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textSize="13dp"
                        android:id="@+id/txt_item_size"
                        android:layout_below="@id/txt_nama_barang"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/GreenTextInputLayout"
                        android:textColorHint="#ffff"
                        android:textColor="#ffffff"
                        android:theme="@style/myEditText">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textSize="13dp"
                            android:textColorHint="#ffff"
                            android:textColor="#ffffff"
                            android:id="@+id/item_size"
                            android:drawableRight="@drawable/img_user"
                            android:fontFamily="@font/gotham2"
                            android:hint="Ukuran"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textSize="13dp"
                        android:id="@+id/txt_merek"
                        android:layout_below="@id/txt_item_size"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/GreenTextInputLayout"
                        android:textColorHint="#ffff"
                        android:textColor="#ffffff"
                        android:theme="@style/myEditText">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textSize="13dp"
                            android:textColorHint="#ffff"
                            android:textColor="#ffffff"
                            android:id="@+id/merek"
                            android:drawableRight="@drawable/img_user"
                            android:fontFamily="@font/gotham2"
                            android:hint="Merek"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textSize="13dp"
                        android:id="@+id/txt_tempat"
                        android:layout_below="@id/txt_merek"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/GreenTextInputLayout"
                        android:textColorHint="#ffff"
                        android:textColor="#ffffff"
                        android:theme="@style/myEditText">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textSize="13dp"
                            android:textColorHint="#ffff"
                            android:textColor="#ffffff"
                            android:id="@+id/tempat"
                            android:drawableRight="@drawable/img_user"
                            android:fontFamily="@font/gotham2"
                            android:hint="Tempat"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ProgressBar
                        android:layout_marginTop="50dp"
                        android:layout_below="@id/txt_tempat"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/loading"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="30dp"
                        android:layout_below="@id/txt_tempat"
                        android:id="@+id/btn_simpan"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:text="Simpan"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:fontFamily="@font/gotham2"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_button"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>